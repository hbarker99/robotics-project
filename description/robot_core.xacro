<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

        <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

        <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

        <material name="black">
        <color rgba="0 0 0 1" />
    </material>
    <!-- Base Link -->
    <link name= "base_link">
    
    </link>

    <!-- Chassis Link -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis"/>
        <origin xyz ="-0.55 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
        <origin xyz="0.275 0 0.05" />
            <geometry>
                <box size="0.6 0.12 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- Back chassis-->
    <joint name="back-wheel-chassis_joint" type="fixed">
        <parent link="chassis" />
        <child link="back-wheel-chassis"/>
        <origin xyz ="0 0 -0.2"/>
    </joint>
    <link name="back-wheel-chassis">
        <visual>
        <origin xyz="0 0 0.1" />
            <geometry>
                <box size="0.1 0.12 0.2"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- left back wheel link-->
    <joint name="left-back-wheel-chassis_joint" type="continuous">
        <parent link="back-wheel-chassis" />
        <child link="left-back-wheel-chassis"/>
        <origin xyz ="0 0.1 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1" />
    </joint>
    <link name="left-back-wheel-chassis">
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- right back wheel link-->
    <joint name="right-back-wheel-chassis_joint" type="continuous">
        <parent link="back-wheel-chassis" />
        <child link="right-back-wheel-chassis"/>
        <origin xyz ="0 -0.1 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1" />
    </joint>
    <link name="right-back-wheel-chassis">
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Front Wheel Link-->
    <joint name="fork-chassis-joint" type="revolute">
        <parent link="base_link" />
        <child link="front-wheel-driver-link" />
        <origin xyz="0 0 0.05" />
        <axis xyz="0 0 1" />
        <limit lower="-0.524" upper="0.524" effort="1" velocity="0.2"/>
    </joint>
    <link name="front-wheel-driver-link">
        <visual>
        <origin xyz="0.05 0 -0.125" rpy="0 -0.5 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.25" />
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- Front Wheel Fork -->
    <joint name="front-wheel-joint" type="fixed">
        <parent link="front-wheel-driver-link" />
        <child link="front-wheel-fork"/>
        <origin xyz ="0.125 0 -0.25" rpy="${-pi/2} 0.5 0"/>
        <axis xyz="0 0 1" />
    </joint>
    <link name="front-wheel-fork">
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.05" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>


</robot>