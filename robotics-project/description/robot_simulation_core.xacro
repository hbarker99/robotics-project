<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

        <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

        <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

        <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- Base Link -->
    <link name= "base_link">
    </link>

    <!-- Chassis Link -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis"/>
        <origin xyz="0 0 0.0325"/>
    </joint>

    <link name="chassis">
        <visual>
        <origin xyz="0 0 0" />
            <geometry>
                <box size="0.23 0.23 0.025"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <box size="0.23 0.23 0.025"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="0.98" x="0.215" y="0.205" z="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- Lidar platform-->
    <joint name="lidar-platform-joint" type="fixed">
        <parent link="chassis" />
        <child link="lidar-platform"/>
        <origin xyz="0.045 0 0.036"/>
    </joint>

    <link name="lidar-platform">
        <visual>
        <origin xyz="0 0 0" />
            <geometry>
                <box size="0.15 0.08 0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <box size="0.15 0.08 0.05"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="0.3" x="0.15" y="0.08" z="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="brain-joint" type="fixed">
        <parent link="chassis" />
        <child link="brain"/>
        <origin xyz="-0.1 0 0.03"/>
    </joint>

    <link name="brain">
        <visual>
        <origin xyz="0 0 0" />
            <geometry>
                <box size="0.11 0.08 0.055"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <box size="0.11 0.08 0.055"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="0.3" x="0.11" y="0.08" z="0.055">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- left wheel link-->
    <joint name="left-wheel-chassis_joint" type="continuous">
        <parent link="base_link" />
        <child link="left-wheel-chassis"/>
        <origin xyz ="0 0.135 0.03" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1" />
    </joint>
    <link name="left-wheel-chassis">
        <visual>
        <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </visual>
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.028" length="0.02" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left-wheel-chassis">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- right wheel link-->
    <joint name="right-wheel-chassis_joint" type="continuous">
        <parent link="base_link" />
        <child link="right-wheel-chassis"/>
        <origin xyz ="0 -0.135 0.03" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1" />
    </joint>
    <link name="right-wheel-chassis">
        <visual>
        <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </visual>
        <collision>
        <origin xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.028" length="0.02" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right-wheel-chassis">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- CASTER WHEEL FRONT LINK -->

    <joint name="caster_wheel_front_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_front"/>
        <origin xyz="0.08 0 0"/>
    </joint>


    <link name="caster_wheel_front">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.03" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_front">
        <material>Gazebo/White</material>
        <mu1 value="0.00001"/>
        <mu2 value="0.00001"/>
    </gazebo>

    <!-- CASTER WHEEL Back LINK -->

    <joint name="caster_wheel_back_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_back"/>
        <origin xyz="-0.08 0 0"/>
    </joint>


    <link name="caster_wheel_back">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.03" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/White</material>
        <mu1 value="0.00001"/>
        <mu2 value="0.00001"/>
    </gazebo>


</robot>